<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
    <th><%= sortable "email" %></th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>

          <td><%= user.email %></td>
          <% if user.is_normal_user?  %> 
            <td><%= link_to 'Mostrar', perfil_path(user.id) %></td>
          <% end %>
          <% if current_user.is_normal_user?  %> 
            <% if user.email != current_user.email && user.is_normal_user?%>
              <td><%= link_to 'Seguir', followers_path(:seguido_id => user), :method => :post %></td>
            <% end %>
          <% end %>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

